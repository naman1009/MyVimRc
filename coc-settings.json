{
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "~/.local/bin/java",
            "default": true
        }
    ],
    "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "jsx",
        "tsx",
        "js",
        "ts",
        "html",
        "python",
        "json",
        "java"
    ],
    "prettier.tabWidth": 4,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "h", "hpp", "cpp", "objc", "objcpp"],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },

        "godot": {
            "host": "127.0.0.1",
            "filetypes": ["gdscript"],
            "port": 6008
        }
    }
}
